@page
@model myScriptureJournal.Pages.Scriptures.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Scriptures</h1><br />
<div class="container">

    <div class="row">
        <div class="col-md-2 right-border">

    <div>
        <form>
            <p>
                Book: <br /><input type="text" asp-for="SearchString" />
                <br /><br />
                Search Notes: <br /><input type="text" asp-for="NoteSearchString" />
                <br /><br />
                <input type="submit" value="Filter" class="btn btn-primary submit-btn" />
            </p>
        </form>

        <p>
            <a asp-page="Create">Create New</a>
        </p>
    </div>

    </div>

    <div class="col-md-10">
        <div class="scripture-container">
        @foreach (var item in Model.Scripture) {
            
            <div class="card">
                <h3 class="title">@Html.DisplayFor(modelItem => item.Book) @Html.DisplayFor(modelItem => item.Reference)</h3>
                <p class="date">@Html.DisplayFor(modelItem => item.AddedDate)</p>
                <hr />
                <p class="notes">@Html.DisplayFor(modelItem => item.Notes)</p>
                <hr />
                <div class="controls" >
                            <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.ID">Detail</a> |
                            <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </div>
            </div>
        }
        </div>
    </div>
    </div>
</div>

<style>
    .scripture-container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
    }

    .card {
        width: 200px;
        height: 280px;
        background-color: #D5D5D5;
        padding: 1em;
        margin: 1em;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        border: none;
        border-radius: 10px;
    }
    .controls {
        text-align: center;
    }
    .success-btn {
        width: 100%;

    }

</style>
